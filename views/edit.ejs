<%- include("partials/header.ejs") %>

<section class="content">
    <div class="container text-center p-5">
        <div class="row justify-content-center">
            <form class="col-lg-6 col-md-8 col-sm-10" action="/edit" method="POST">
                <h1 class="mb-5 fw-normal">Edit your blog here!</h1>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Title" name="title" value="<%= blog.title %>">
                    <label for="floatingInput">Title</label>
                </div>
                <div class="form-floating mb-4">
                    <textarea class="form-control textbox" id="floatingContent" placeholder="Blog content" style="height: 200px;" name="text"><%= blog.text %></textarea>
                    <label for="floatingContent">Blog content</label>
                </div>
                <button class="btn btn-primary py-2 mt-2 w-100" type="submit" name="edit" value="<%= blog.id  %>">Update</button>
            </form>
        </div>
    </div>
</section>


<%- include("partials/footer.ejs") %>

